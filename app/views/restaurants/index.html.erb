<h1>List of Restaurants Page</h1>
<ul>
<% @restaurants.each do |r| %>
  <li><%= link_to r.name, restaurant_path(r) %></li>
<% end %>
</ul>
<%= link_to 'Back', root_path %>


<h1>These are the best offers around for <span id="date"></span>:</h1>


<div class="container-fluid">
  <div class="row">
  <div class="offer-container col-md-8">
    <div class="container">
      <p id="date"></p>
      <!-- Code your tabs here -->
      <div class="offers">
        <% @restaurants.each do |restaurant| %>

        <div class="offer-detail">
          <div class="offer-count">
            <p>Number</p>
          </div>
          <img src="https://res.cloudinary.com/duh9oaa44/image/upload/v1542719944/edward-guk-357344-unsplash.jpg" class="restaurant-logo">
          <div class="restaurant-details">
            <h3><%= restaurant.name %></h3>
            <p><%= restaurant.address %></p>
            <p><%= restaurant.cuisine %></p>
          </div>
          <div class="restaurant-offer">
            <p>Schnitzeltag</p>
            <p>Das kannst du dir nicht entgehen lassen</p>
          </div>
          <div class="offer-table">
            <button type="button" class="btn btn-success">Book a table</button>
          </div>
          <div class="offer-price">
            <p>345â‚¬</p>
          </div>
          <div class="offer-link">
            <p> <%= link_to ">", restaurant_path(restaurant) %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  <div id="map col-ms-4"></div>
  </div>
</div>
</div>




<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAP_API'] %>"
></div>








